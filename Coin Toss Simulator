#include <iostream> 
#include <cstdlib> 
#include <ctime> 
using namespace std; 
class Coin { 
public: 
    Coin() { 
        srand(static_cast<unsigned int>(time(0))); 
 
        toss(); 
    } 
    void toss() { 
        int randomNumber = rand() % 2; 
 
        if (randomNumber == 0) { 
            sideUp = "heads"; 
        } else { 
            sideUp = "tails"; 
        } 
    } 
 
    string getSideUp() const { 
        return sideUp; 
    } 
private: 
    string sideUp; 
}; 
int main() { 
    Coin coin; 
    int headsCount = 0; 
    int tailsCount = 0; 
 
    cout << "The initial side facing up is: " << coin.getSideUp() << endl; 
 
    for (int i = 0; i < 20; ++i) { 
        coin.toss(); 
        cout << "After tossing, the side facing up is: " << coin.getSideUp() << endl; 
 
        if (coin.getSideUp() == "heads") { 
 
            ++headsCount; 
 
 
        } else { 
            ++tailsCount; 
        } 
    } 
    cout << "Number of times heads facing up: " << headsCount << endl; 
    cout << "Number of times tails facing up: " << tailsCount << endl; 
    return 0; 
} 
